#include<bits/stdc++.h>
using namespace std;
int main()
{
    vector<int>a;
    int size;
    cin>>size;
    for(int i=0;i<size;i++)
    {
        int e;
        cin>>e;
        a.push_back(e);
    }
    // for(int i=0;i<size;i++)
    // {
    //     cout<<a[i]<<" ";
    // }
    if(size<3)
    {
        cout<<"Not Possible";
    }
    else
    {
        map<int,int>aa;
        for(int i=0;i<size;i++) aa[a[i]]++;
        // for(auto it:aa)
        // {
        //     cout<<it.first<<" : "<<it.second<<endl;
        // }
        sort(a.begin(),a.end());
        //  for(int i=0;i<size;i++)
        //  {
        //      cout<<a[i]<<" ";
        //  }
        int s=0;
        for(int i=0;i<size;i++)
        {
            for(int j=i+1;j<size;j++)
            {
                aa[a[i]]--;
                aa[a[j]]--;
                s=a[i]+a[j];
                if(aa[s]!=0)
                {
                    cout<<a[i]<<" + "<<a[j]<<" = "<<s<<endl;
                }
                aa[a[i]]++;
                aa[a[j]]++;
            }
        }
    }
}
